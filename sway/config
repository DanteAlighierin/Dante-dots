### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg images/wallpaper.png fill
#output * bg ~/.config/sway/images/wallpaper.png fill
# exec ~/.config/sway/scripts/wallpaper_change.sh

# Clamshell Mode

exec_always --no-startup-id sudo wg-quick up wg0



set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Mojave-dark'
    gsettings set $gnome-schema icon-theme 'la-capitaine-icon-theme'
}






